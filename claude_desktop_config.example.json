{
  "mcpServers": {
    "proxmox-mcp-server": {
      "command": "uv",
      "args": ["run", "/full/path/to/proxmox_mcp.py"],
      "env": {
        "I_ACCEPT_RISKS": "false",
        "HOST": "192.168.1.100",
        "SSH_PORT": "22",
        "SSH_USERNAME": "root",
        "SSH_PASSWORD": "your_password",
        "ENABLE_HOST_EXEC": "false",
        "CHARACTER_LIMIT": "25000",
        "MAX_FILE_SIZE": "10485760"
      }
    }
  }
}
